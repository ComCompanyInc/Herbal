{% extends 'base.html.twig' %}

{% block body %}
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" >

    {% block stylesheets %}
        <style>
            table {
                max-width: 900px;
            }
        </style>
    {% endblock %}
    </head>

    <h1>Новость:</h1>

    <table>
        <thead>
            <tr>
                <th> <h2>{{ newData.title }}</h2></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>
                    <p>
                        {{ newData.content.mainText }}
                    </p>
                </th>
            </tr>
            <tr>
                <th>{{ newData.content.dateSending | date }}</th>
            </tr>
            <tr>
                <th> {{ newData.content.author.access.email }}</th>
            </tr>
        </tbody>
    </table>

    <h1>Комментарии:</h1>
    <h2>Написать комментарий:</h2>

    {{ form(commentForm) }}

    {% if not(comments is empty) %}

    <table>
        <thead>
        <tr>
            <th>
                комментарий
            </th>
            <th>
                автор
            </th>
            <th>
                дата
            </th>
        </tr>
        </thead>
        <tbody>

            {% for comment in comments %}
                <tr id = "row-{{ comment.content.id }}">
                    <th>{{ comment.content.mainText }}</th>
                    <th>{{ comment.content.author.access.email }}</th>
                    <th>{{ comment.content.dateSending | date }}</th>
                    {% if (not(user is empty)) and (user.email == comment.content.author.access.email) %}
                        <th><button class="remove" id="{{ comment.content.id }}">Удалить</button></th>
                    {% endif %}
                </tr>
            {% endfor %}

        {% else %}
            <h4>Комментариев пока нет.</h4>
        {% endif %}

        </tbody>
    </table>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>


    {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>

        document.addEventListener('DOMContentLoaded', () => {

            const buttons = document.querySelectorAll(".remove");

            for (let i = 0; i < buttons.length; i++) {
                const button = buttons[i];

                button.addEventListener("click", function() {
                    startAjax(button.id);
                });
            }

            function startAjax(id)
            {

                $.ajax({
                    url: '/comments/remove/' + id,
                    type: 'GET',
                    success: function (response) {
                        $("#row-" + id).remove();
                    },
                    error: function () {
                        alert("error");
                    }
                });

            }
        });

        </script>
    {% endblock %}

{% endblock %}