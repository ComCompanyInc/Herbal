{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Comic+Sans+MS&display=swap');

        body {
            background-image: url('https://images.unsplash.com/photo-1504711434969-e33886168f5c?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            font-family: 'Comic Sans MS', cursive;
        }

        .card {
            background: rgba(0, 0, 0, 0.7);
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
            margin: 0 auto;
        }

        .card-header {
            background: #28a745;
            border-radius: 15px 15px 0 0;
            padding: 20px;
            text-align: center;
            font-size: 24px;
            font-weight: bold;
        }

        .card-body {
            padding: 30px;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.1);
            border: none;
            color: #fff;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 20px;
        }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.2);
            color: #fff;
        }

        .btn-primary {
            background: #28a745;
            border: none;
            border-radius: 10px;
            padding: 15px;
            width: 100%;
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .btn-primary:hover {
            background: #218838;
        }

        .alert {
            border-radius: 10px;
        }

        .text-shadow {
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .news-icon {
            font-size: 48px;
            color: #28a745;
            margin-bottom: 20px;
        }

        .logo {
            display: block;
            margin: 0 auto 20px;
            width: 150px;
            height: auto;
        }

        .btn-group {
            display: flex;
            justify-content: space-between;
        }

        .btn-group .btn-primary {
            width: 48%;
        }
    </style>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-shadow">
                        <i class="fas fa-newspaper news-icon"></i>
                        News Feed Login
                    </div>
                    <div class="card-body">
                        <img src="/gear-chart-logo/O3IICD1.png" alt="Logo" class="logo">
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                                </div>
                            {% endif %}

                            <div class="mb-3">
                                <label for="username" class="form-label text-shadow">Email</label>
                                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label text-shadow">Password</label>
                                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html

                            <div class="mb-3 form-check">
                                <input type="checkbox" name="_remember_me" id="_remember_me" class="form-check-input">
                                <label for="_remember_me" class="form-check-label text-shadow">Remember me</label>
                            </div>
                            #}

                            <div class="btn-group">
                                <button class="btn-primary" type="submit">
                                    Войти
                                </button>
                                <button class="btn-primary" id="btn-reg" type="button">
                                    Регистрация
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const button = document.getElementById('btn-reg');

            button.addEventListener('click', function() {
                window.location.href = "/registration";
            });
        });
    </script>

{% endblock %}